<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="294.0" spacing="20.0" style="-fx-background-color: fefdfc;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.RegisterController">
   <children>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="295.0" style="-fx-background-color: rgba(208,249,249,0.5);">
         <children>
            <Label contentDisplay="TOP" layoutX="33.0" layoutY="19.0" style="-fx-label-padding: 5;" text="Charity System">
               <font>
                  <Font name="Times New Roman Bold" size="32.0" />
               </font>
            </Label>
            <Label contentDisplay="TOP" layoutX="100.0" layoutY="66.0" style="-fx-label-padding: 5;" text="Welcome">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="RegisterLastname" layoutX="42.0" layoutY="169.0" prefHeight="33.0" prefWidth="205.0" promptText="Last name*" />
            <PasswordField fx:id="RegisterReEnterPassword" layoutX="42.0" layoutY="287.0" prefHeight="33.0" prefWidth="205.0" promptText="Re-enter password" />
            <Label contentDisplay="TOP" layoutX="24.0" layoutY="407.0" style="-fx-label-padding: 5;" text="Already have an account?">
               <font>
                  <Font name="Times New Roman" size="12.0" />
               </font>
            </Label>
            <Label contentDisplay="TOP" layoutX="92.0" layoutY="99.0" style="-fx-label-padding: 5;" text="Sign up to continue">
               <font>
                  <Font name="Times New Roman" size="12.0" />
               </font>
            </Label>
            <Button fx:id="ContinueRegisterButton" layoutX="41.0" layoutY="364.0" mnemonicParsing="false" onAction="#RegisterUser" prefHeight="33.0" prefWidth="205.0" style="-fx-background-color: rgba(0,174,255);" text="Register" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label fx:id="LoginLabel" contentDisplay="TOP" layoutX="161.0" layoutY="413.0" onMouseClicked="#LoginPage" text="Log in " textFill="#2600ff">
               <font>
                  <Font name="Times New Roman" size="12.0" />
               </font>
            </Label>
            <PasswordField fx:id="RegisterNewpassword" layoutX="42.0" layoutY="247.0" prefHeight="33.0" prefWidth="205.0" promptText="New password*" />
            <TextField fx:id="RegisterFirstname" layoutX="42.0" layoutY="129.0" prefHeight="33.0" prefWidth="205.0" promptText="First name*" />
            <TextField fx:id="RegisterEmail" layoutX="41.0" layoutY="208.0" prefHeight="33.0" prefWidth="205.0" promptText="Email address*" />

            <!-- Radio Buttons for User Type -->
            <RadioButton fx:id="StaffRadioButton" layoutX="62.0" layoutY="339.0" mnemonicParsing="false" text="Staff">
               <toggleGroup>
                  <ToggleGroup fx:id="userTypeToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="VolunteerRadioButton" layoutX="161.0" layoutY="339.0" mnemonicParsing="false" text="Volunteer" toggleGroup="$userTypeToggleGroup" />
         </children>
      </AnchorPane>
   </children>
</VBox>
